<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>LightFlare</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/main.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/LightFlare.styles.css" asp-append-version="true" />
</head>
<body>
    <div id="page-wrapper">

			<!-- Header -->
				<div id="header-wrapper">
					<div id="header" class="container">

						<!-- Logo -->
							<h1 id="logo"><a href="@Url.Action("Index","Home")">LightFlare</a></h1>

						<!-- Nav -->
							<nav id="nav">
								<ul>
									<li><a href="@Url.Action("Index","Wallet")">Balances</a></li>
									<li><a href="@Url.Action("Savings","Wallet")">Savings</a></li>
									<li class="break"><a href="@Url.Action("Transactions","Wallet")">Transactions</a></li>
									<li><a href="@Url.Action("Login","Home")" id="loginMenu">Login</a></li>
									<li><a href="#" onclick="logout()" id="logoutMenu">Logout</a></li>
								</ul>
							</nav>

					</div>

					<!-- Hero -->
						<section id="hero" class="container">
							@await RenderSectionAsync("Header", required: false)
							
						</section>

				</div>

			<!-- Features 1 -->
				@RenderBody()

			<!-- Footer -->
				<div id="footer-wrapper">
					<div id="footer" class="container">
						<header class="major">
							<h2>LightFlare</h2>
							<p>LightFlare is a 100% web and non-custodial wallet for the LightLink network.</p>
						</header>
						
					</div>
					<div id="copyright" class="container">
						<ul class="menu">
							<li>&copy; LightFlare. All rights reserved.</li>
						</ul>
					</div>
				</div>

		</div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    
    <script src="https://cdn.jsdelivr.net/npm/web3@latest/dist/web3.min.js"></script>
	<script src="~/js/constants.js" asp-append-version="true"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/main.js" asp-append-version="true"></script>
    <script src="~/js/util.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>