@{
}

@section Header {
    <header>
		<h2>My transactions</h2>
	</header>
	<p>Check your transactions in LightLink Network</p>
	<ul class="actions">
		<li><a href="@Url.Action("Index","Wallet")" class="button">See my balance</a></li>
        <li><a href="@Url.Action("CreateTransaction","Wallet")" class="button">Create transaction</a></li>
        <li><a href="@Url.Action("Savings","Wallet")" class="button">Check savings</a></li>
	</ul>
}


<div class="wrapper">
	<div class="container" id="main">
        <div class="row col-12">
            <div class="alert alert-info">
                You are in the <span id="networkLightLink"></span>. Click <a href="#" id="changeNetworkLink">here</a> if you want to change to the other network.
            </div>
        </div>
		<div class="row gtr-0">
            <div class="col-12-narrower">
                <p class="alert alert-warning" id="noTransactions"></p>
                <p class="transactionList">

                </p>
            </div>
			

		</div>
						
	</div>
</div>




@section Scripts
{
    <script type="text/javascript">
        var publicKey = localStorage.getItem('publicKey');
        if(publicKey == null) {
            location.href = "/Home/Login";
        }
        else
        {
            getTransactions();
        }
        $('#changeNetworkLink').click(function() {
            changeNetwork();
        });
    </script>
}